{% extends 'base_admin.html.twig' %}

{% block title %}Publicite index{% endblock %}

{% block body %}
    <h1 align="center"><span style='color: #E66207'>Nos publicit√©s </span></h1>

    <table class="table" border="0.5px solid #ddd">
        <thead>
            <tr style="background-color:royalblue">
                <th style="color: white">Id</th>
                <th style="color: white">Nom</th>
                <th style="color: white">Prenom</th>
                <th style="color: white">Email</th>
                <th style="color: white">Domaine</th>
                <th style="color: white">Affichage</th>
                <th style="color: white">Image</th>
                <th style="color: white">Prix</th>
                <th style="color: white">Lien</th>
                <th style="color: white">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicite in publicites %}
            <tr>
                <td>{{ publicite.id }}</td>
                <td>{{ publicite.nom }}</td>
                <td>{{ publicite.prenom }}</td>
                <td>{{ publicite.email }}</td>
                <td>{{ publicite.domaine }}</td>
                <td>{{ publicite.affichage }}</td>
                <td>{{ publicite.image }}</td>
                <td>{{ publicite.prix }}</td>
                <td>{{ publicite.lien }}</td>

                <td>
                    <a style="color:#E66207" href="{{ path('publicite_show', {'id': publicite.id}) }}">show</a>
                    <a href="{{ path('publicite_edit', {'id': publicite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicite_new') }}">Create new</a>
{% endblock %}
