{% extends 'base.html.twig' %}

{% block body %}
<link href="{{ asset("css/inscrit.css") }}" rel="stylesheet">
<div class="cont">
    <div class="form sign-in">
        <h2>S'inscrire</h2>
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
        <label>
            <span> {{form_label(form.role)}}</span>
            {{form_widget(form.role,{'attr': {'class': 'form-control'}})}}

        </label>


        <label>
            <span> {{form_label(form.email)}}</span>
            {{form_widget(form.email,{'attr': {'class': 'form-control'}})}}
            {{ form_errors( form.email) }}
        </label>
        <label>
            <span> {{form_label(form.plainPassword,'Mot de passe')}}</span>
            {{form_widget(form.plainPassword,{'attr': {'class': 'form-control'}})}}

        </label>
        <label>
            <span> {{form_label(form.nomutilisateur)}}</span>
            {{form_widget(form.nomutilisateur,{'attr': {'class': 'form-control'}})}}

        </label>

        <label>
            <span> {{form_label(form.nomsociete)}}</span>
            {{form_widget(form.nomsociete,{'attr': {'class': 'form-control'}})}}
            {{ form_errors( form.nomsociete) }}
        </label>


        <button type="submit" class="submit" >S'inscrire</button>


    </div>
    {{ form_end(form) }}
    <div class="sub-cont">
        <div class="imgs">
            <div class="img__text m--up">
                <h2></h2>

            </div>
            <div class="img__text m--in">
                <h2>One of us?</h2>
                <p>If you already has an account, just sign in. We've missed you!</p>
            </div>

            <div class="img__btn">
                <a href="{{ path('inscription') }}" class="get-started-btn">Apprenant/Formateur</a>

            </div>
        </div>

    </div>



    {% endblock %}

    {% block script %}

{% endblock %}