{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <!-- Header -->
    <link href="{{ asset('/admin/css/sb-admin-2.min.css') }}" rel="stylesheet">
    <!-- Content -->
    <br><br> <br><br>
    <section id="article" class="container-fluid pb-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{ form_start(emailForm) }}
                    <div class="container">

                        <!-- Outer Row -->
                        <div class="row justify-content-center">

                            <div class="col-xl-10 col-lg-12 col-md-9">

                                <div class="card o-hidden border-0 shadow-lg my-5">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="row">
                                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                                            <div class="col-lg-6">
                                                <div class="p-5">
                                                    <div class="text-center">
                                                        <h1 class="h4 text-gray-900 mb-2">Mot de passe oublié?</h1>
                                                        <p class="mb-4">Pour réinitialiser votre mot de passe, veuillez entrer votre adresse e-mail ci-dessous.</p>
                                                    </div>
                                                    <form class="user">

                                                        <div class="form-group">
                                                            <label for="inputEmail">Email</label>
                                                            {{form_widget(emailForm.email,{'attr': {'class': 'form-control form-control-user'}})}}
                                                            <!--<input type="email" class="form-control form-control-user"
                                                                   id="inputEmail" >-->
                                                        </div>

                                                        <button class="btn btn-primary btn-user btn-block" type="submit">
                                                           Envoyer
                                                        </button>

                                                    </form>
                                                    <hr>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>



                    {{ form_end(emailForm) }}
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}