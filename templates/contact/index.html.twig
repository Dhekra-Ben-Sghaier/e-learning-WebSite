{% extends 'personnes/indexuser.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <link href="{{ asset('/admin/css/sb-admin-2.min.css') }}" rel="stylesheet">
    {{ form_start(contactForm) }}
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
    {% for message in app.flashes('message') %}
    <div class="alert alert=success" role="alert">
    {{ message }}
    </div>
{% endfor %}
    <h1>Nous contacter</h1>

                            <form class="user">
                                <div class="form-group">
                                    <label for="inputNom">Nom</label>
                                    {{form_widget(contactForm.nom,{'attr': {'class': 'form-control form-control-user'}})}}

                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Email</label>

                                    {{form_widget(contactForm.email,{'attr': {'class': 'form-control form-control-user'}})}}
                                </div>
                                <div class="form-group">
                                    <label for="inputMessage">Message</label>
                                    {{form_widget(contactForm.message,{'attr': {'class': 'form-control form-control-user'}})}}

                                </div>



                                {{form_widget(contactForm.envoyer,{'attr': {'class': 'btn btn-primary btn-user btn-block'}})}}


                                <br>

                            </form>
                            {{ form_end(contactForm) }}

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

    </div>




{% endblock %}
